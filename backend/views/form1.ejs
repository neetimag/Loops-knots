                margin-top: 0;
                margin-bottom: 0.5rem;
            }
            
            label {
                display: flex;
                align-items: center;
                margin-bottom: 0.5rem;
            }
            
            input,
            button,
            select,
            textarea {
                margin: 0;
                font-family: inherit;
                line-height: inherit;
            }
            
            button {
                border: none;
            }
            
            .container {
                width: 100%;
                margin: 3.125rem auto 0 auto;
            }
            
            @media (min-width: 576px) {
                .container {
                    max-width: 540px;
                }
            }
            
            @media (min-width: 768px) {
